{
  "NLog": {
    "targets": {
      "console": {
        "type": "Console"
      },

      "controlLogging": {
        "type": "ControlLogging",
        "Host": "localhost"
      },

      "file": {
        "type": "File",
        "fileName": "log.txt"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "console"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "controlLogging"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file"
      }
    ]
  }
}